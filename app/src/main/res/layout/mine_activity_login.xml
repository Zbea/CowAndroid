<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@mipmap/icon_login_bg"
    >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_icon"
        android:textSize="@dimen/sp_30"
        android:textStyle="bold"
        android:textColor="@color/color_white"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_centerHorizontal="true"
        android:text="@string/app_name"/>

    <LinearLayout
        android:layout_below="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/space_dimen"
        android:layout_marginRight="@dimen/space_dimen"
        android:layout_marginTop="@dimen/dp_80"
        android:orientation="vertical">

        <EditText
            android:id="@+id/mEtPhoneOrEmail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/bg_transparent_solid_5dp_coner"
            android:textColorHint="#bbffffff"
            android:textColor="@color/color_333333"
            android:hint="请输入用户名"
            android:textSize="@dimen/sp_14"
            android:singleLine="true"
            android:inputType="text"
            />

        <EditText
            android:id="@+id/mEtPassword"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/dp_10"
            android:background="@drawable/bg_transparent_solid_5dp_coner"
            android:textColorHint="#bbffffff"
            android:textColor="@color/color_333333"
            android:hint="@string/mine_plz_input_password"
            android:textSize="@dimen/sp_14"
            android:singleLine="true"
            android:inputType="textPassword"
            />


        <TextView
            android:id="@+id/mTvLogin"
            android:layout_width="match_parent"
            android:layout_height="@dimen/btn_dimen"
            android:layout_marginTop="@dimen/dp_80"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/color_white"
            android:gravity="center"
            android:text="@string/mine_login"
            android:background="@drawable/bg_main_login_5dp_coner"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/mTvUseForgetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:gravity="right"
        android:text="@string/mine_forget_password"
        android:layout_alignParentBottom="true"
        android:textColor="@color/color_white"
        android:layout_marginBottom="@dimen/dp_35"
        android:layout_marginLeft="@dimen/dp_20"
        />

    <TextView
        android:id="@+id/mTvRegist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_35"
        android:textSize="@dimen/sp_14"
        android:text="立即注册"
        android:textColor="@color/color_white"
        />



</RelativeLayout>